<h2> Контакты </h2>

<form action="/contacts" method="POST" role="form">
  <div class="form-group">
    <label>Ваш имя</label>
    <input name="name" type="text" class="form-control" placeholder="Введите имя">
  </div>
  <div class="form-group">
    <label>Ваш email</label>
    <input name="email" type="text" class="form-control" placeholder="Введите email">
  </div>
  <div class="form-group">
    <label>Оставить свое сообщение</label>
    <textarea name="textarea" class="form-control" style="height: 200px;"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Отправить</button>
</form>
