<h2> Записаться </h2>

<form action="/visit" method="POST" role="form">
  <div class="form-group">
    <select name="barber" class="custom-select" value=<%=@barber%>>
      <option value="" selected disabled hidden>Выберите парикмахера из списка </option>
      <% @barbers.each do |barber|%>
        <option <%= @barber == barber.name ? 'selected' : ''%> value="<%= barber.name %>"><%= barber.name %></option>
      <% end%>
    </select>
  </div>
  <div class="form-group">
    <label>Ваше имя</label>
    <input type="text" class="form-control" name="username" placeholder="Ваше имя" value=<%=@username%>>
  </div>

  <div class="form-group">
    <label>Ваше телефон</label>
    <input type="text" class="form-control" name="phone" placeholder="Ваше телефон" value=<%=@phone%>>
  </div>

  <div class="form-group">
    <label>Когда Вас ждать?</label>
    <input type="text" class="form-control" name="datetime" placeholder="Введите время" value=<%=@datetime%>>
  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>
</form>

<script type="text/javascript" src="scripts.js"></script>